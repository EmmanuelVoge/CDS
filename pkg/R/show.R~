#' The method displays the first part of the summary, which contains
#' only the essential info about the CDS class object.
#' 

setMethod("show",
          signature(object = "CDS"),
          function(object){
              
              cat(sprintf("Contract Type:            %-s",
                          object@contract),
                  sprintf("TDate:                    %-s",
                          object@TDate), "\n",
                  sprintf("Currency:                 %-s",
                          object@currency), 
                  sprintf("Maturity:                 %-s",
                          object@endDate), "\n",
                  sprintf("Spread:                   %-s",
                          object@parSpread), 
                  sprintf("Coupon Rate:              %-s",
                          object@couponRate), "\n",
                  sprintf("Upfront:                  %-s",
                          object@upfront), 
                  sprintf("Spread DV01:              %-s",
                          object@spreadDV01), "\n",
                  sprintf("IR DV01:                  %-s",
                          object@IRDV01), 
                  sprintf("Rec Risk (1 %):           %-s",
                          object@RecRisk01), "\n",
                  sep = ""
                  )
              
              cat("\n")
          }
          )


